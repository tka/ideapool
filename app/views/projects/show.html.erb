<h2><%= @project.name%>
<%=link_to "編輯", edit_project_url(@project), class: "btn btn-primary btn-sm"%>
<%=link_to "刪除", project_url(@project), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "確認刪除專案？"} %>
</h2>
<%=image_tag @project.image.url, width:300%>
<p><%= @project.description%></p>

<ul>
    <li>分類: <%= @project.category.name %></li>
    <li>網站: <%= link_to @project.web_url, @project.web_url%></li>
    <li>FB: <%= link_to @project.fb_url, @project.fb_url%></li>
    <li>github: <%= link_to @project.github_url, @project.github_url%></li>
    <li>標籤: <%= @project.tags%></li>
</ul>

<%= javascript_include_tag "vendors/jquery"%>
<%= javascript_include_tag "vendors/rails"%>
